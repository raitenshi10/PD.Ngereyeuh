<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:padding="4dp"
    tools:context=".TambahDataActivity">

    <EditText
        android:id="@+id/et_nama_pengirim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_desa_pengirim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Desa"
        app:layout_constraintEnd_toEndOf="@+id/et_nama_pengirim"
        app:layout_constraintStart_toStartOf="@+id/et_nama_pengirim"
        app:layout_constraintTop_toBottomOf="@+id/et_nama_pengirim" />

    <EditText
        android:id="@+id/et_kecamatan_pengirim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Kecamatan"
        app:layout_constraintEnd_toEndOf="@+id/et_desa_pengirim"
        app:layout_constraintStart_toStartOf="@+id/et_desa_pengirim"
        app:layout_constraintTop_toBottomOf="@+id/et_desa_pengirim" />

    <EditText
        android:id="@+id/et_nopol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nopol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_kecamatan_pengirim" />

    <Button
        android:id="@+id/btn_simpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Simpan"
        app:layout_constraintEnd_toEndOf="@+id/et_nopol"
        app:layout_constraintTop_toBottomOf="@+id/et_nopol" />

    <Button
        android:id="@+id/btn_batal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Batal"
        app:layout_constraintStart_toStartOf="@+id/et_nopol"
        app:layout_constraintTop_toBottomOf="@+id/et_nopol" />

</androidx.constraintlayout.widget.ConstraintLayout>